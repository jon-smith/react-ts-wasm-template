{
	"name": "react-ts-wasm-template",
	"version": "0.1.0",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jon-smith/react-ts-wasm-template"
	},
	"author": {
		"name": "jon-smith",
		"email": "jonsmith24601@outlook.com"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/jon-smith/react-ts-wasm-template/issues"
	},
	"homepage": "http://jon-smith.github.io/react-ts-wasm-template",
	"dependencies": {
		"@material-ui/core": "^4.11.0",
		"@material-ui/icons": "^4.9.1",
		"@reduxjs/toolkit": "^1.4.0",
		"rust-wasm-lib": "file:./rust-wasm/pkg",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-redux": "^7.2.1",
		"redux": "^4.0.5"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.5.0",
		"@testing-library/user-event": "^7.2.1",
		"@types/jest": "^24.9.1",
		"@types/material-ui": "^0.21.7",
		"@types/node": "^12.12.42",
		"@types/react": "^16.9.35",
		"@types/react-dom": "^16.9.8",
		"@types/react-redux": "^7.1.9",
		"@types/webpack-env": "^1.15.2",
		"gh-pages": "^3.1.0",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.6",
		"prettier": "^2.0.5",
		"react-scripts": "3.4.3",
		"react-app-rewired": "^2.1.6",
		"typescript": "^3.9.7",
		"wasm-loader": "^1.3.0",
		"worker-loader": "^2.0.0",
		"comlink": "^4.3.0"
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"prettier --write"
		]
	},
	"scripts": {
		"start": "react-app-rewired start",
		"build": "react-app-rewired build",
		"test": "react-app-rewired test",
		"eject": "react-scripts eject",
		"predeploy": "npm run build",
		"deploy": "gh-pages -d build",
		"build-wasm": "wasm-pack build rust-wasm && wasm-pack build rust-wasm --target nodejs --out-dir pkg-node",
		"test-native": "cargo test --manifest-path rust-wasm/Cargo.toml"
	},
	"eslintConfig": {
		"extends": "react-app",
		"rules": {
			"@typescript-eslint/no-explicit-any": "error"
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
